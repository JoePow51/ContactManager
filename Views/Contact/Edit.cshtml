@model Contact
@{
    string name = ViewBag.Action + " Contact";
    ViewBag.Title = name;
}

<h2>@name</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Firstname">First Name</label>
        <input asp-for="Firstname" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Lastname">Last Name</label>
        <input asp-for="Lastname" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>


    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control">
            <option value="">select a category</option>
            @foreach (Category g in ViewBag.Categories)
            {
                <option value="@g.CategoryId">@g.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Organization">Organization</label>
        <input asp-for="Organization" class="form-control">
    </div>

    <input type="hidden" asp-for="ContactId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>